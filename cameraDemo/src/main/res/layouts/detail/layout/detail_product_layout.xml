<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_dark">

    <!--add photo view here-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/edit_top_margin"
        android:layout_marginLeft="@dimen/edit_left_margin"
        android:layout_marginRight="@dimen/edit_right_margin"
        android:layout_marginBottom="@dimen/edit_bottom_margin"
        android:background="@drawable/round_corner_red_background">
        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_corner_background"/>
        <TextView
            android:id="@+id/detail_im_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:maxWidth="150dip"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_margin="6dp"
            android:textSize="12sp"
            android:text="im_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_button_selector"
            android:layout_margin="4dp"
            android:text="Buy"/>
    </FrameLayout>
</RelativeLayout>