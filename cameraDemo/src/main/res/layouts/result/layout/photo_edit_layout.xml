<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/edit_top_margin"
        android:layout_marginLeft="@dimen/edit_left_margin"
        android:layout_marginRight="@dimen/edit_right_margin"
        android:layout_marginBottom="@dimen/edit_bottom_margin"
        android:background="@drawable/round_corner_red_background">

        <me.littlecheesecake.croplayout.EditPhotoView
            xmlns:crop="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoedit_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_corner_background"
            crop:crop_corner_color="@color/green"
            crop:crop_line_color="@color/transparent"
            crop:crop_shadow_color="@color/gray_trans_40"/>
        <TextView
            android:id="@+id/photoedit_rotate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_button_selector"
            android:layout_margin="4dp"
            android:text="@string/rotate"/>
    </FrameLayout>

</RelativeLayout>